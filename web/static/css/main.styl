.body-wrapper
  padding 0
  .navbar-inverse
    margin-bottom 0
  .navbar-brand
    font-size 1.6em
    & > img
      display inline
      max-height 100%
      height 100%
      -o-object-fit contain
      object-fit contain
  .navbar-right
    .avatar
      border-radius 12px

  main.container
    padding 1em
    background #fff
    min-height calc(100vh - 52px)

    .breadcrumb
      background-color inherit

a
  &:active, &:hover
    text-decoration none

.dropdown-menu > li > form > a
  display block
  padding 3px 20px
  clear both
  font-weight normal
  line-height 1.42857143
  color #333333
  white-space nowrap

h2
  padding 0 1em

@import "./util"
@import "./pages/*"
